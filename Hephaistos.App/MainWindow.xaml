<Window x:Class="Hephaistos.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewmodel="clr-namespace:Hephaistos.App.Mvvm.ViewModel"
        xmlns:converters="clr-namespace:Hephaistos.App.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        Title="MainWindow" Height="720" Width="1280">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding ClosingViewCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="4,0" />
        </Style>
        <converters:BooleanToFileTypeConverter x:Key="IsFolderConverter" />
    </Window.Resources>
    <TabControl>
        <TabItem Header="Replacement">
            <DockPanel LastChildFill="True">
                <DockPanel Margin="8" DockPanel.Dock="Top">
                    <Label DockPanel.Dock="Left" Content="Directory" />
                    <Button DockPanel.Dock="Right" Content="Browse" Padding="16,0" Command="{Binding BrowseDirectoryCommand}" />
                    <TextBox VerticalContentAlignment="Center" Width="auto" Margin="16,0" Text="{Binding RootDirectory, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <Button DockPanel.Dock="Bottom" Content="APPLY" Command="{Binding ApplyRulesCommand}" Margin="8" Height="32" />
                <ListView ItemsSource="{Binding Lines}"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="32">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsChecked}" />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn DisplayMemberBinding="{Binding IsDirectory, Converter={StaticResource IsFolderConverter}}" />
                            <GridViewColumn DisplayMemberBinding="{Binding OldValue}" />
                            <GridViewColumn DisplayMemberBinding="{Binding NewValue}" />
                            <GridViewColumn DisplayMemberBinding="{Binding Extension}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </TabItem>
        <TabItem Header="Rules" Height="20" VerticalAlignment="Top">
            <DockPanel LastChildFill="True">
                <Border DockPanel.Dock="Top" Padding="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Label Content="Current rules" />
                        <TextBox Grid.Column="1" Text="{Binding SaveFile, Mode=TwoWay}" VerticalContentAlignment="Center" />
                        <Button Grid.Column="2" Content="Save" Padding="16,0" Command="{Binding SaveRulesCommand}" />

                        <Label  Grid.Row="1" Content="Rules saved" />
                        <ComboBox Grid.Column="1" Grid.Row="1" VerticalContentAlignment="Center" Width="auto" Padding="4,0" ItemsSource="{Binding RulesSavedFiles, Mode=TwoWay}" SelectedItem="{Binding SelectedFile, Mode=TwoWay}" />
                        <Button Grid.Column="2" Grid.Row="1" Content="Load" Padding="16,0" Command="{Binding LoadRulesCommand}" />
                    </Grid>
                </Border>
                <Button Content="Add" Command="{Binding AddRuleCommand}" DockPanel.Dock="Bottom" />
                <ItemsControl ItemsSource="{Binding Rules}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              AlternationCount="{Binding CountOfItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightGray" Margin="8" Padding="16" CornerRadius="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="40" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Button Content="U" Width="32" Height="32"
                                            Command="{Binding DataContext.UpRuleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Button Content="D" Width="32" Height="32" Grid.Row="1"
                                            Command="{Binding DataContext.DownRuleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource TemplatedParent}}" />
                                    <Label Content="Pattern" Grid.Column="1" />
                                    <TextBox Grid.Column="2" VerticalContentAlignment="Center" Text="{Binding Pattern, Mode=TwoWay}" />
                                    <Label Content="Replacement:" Grid.Column="1" Grid.Row="1" />
                                    <TextBox Grid.Column="2" Grid.Row="1" VerticalContentAlignment="Center"  Text="{Binding Replacement, Mode=TwoWay}" />
                                    <Button Content="X" Grid.Column="3" Grid.RowSpan="3"
                                            Margin="8,0,0,0"
                                            Command="{Binding DataContext.RemoveRuleCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding Path=., Mode=TwoWay}" />
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="8">
                                        <CheckBox Content="Regex" IsChecked="{Binding IsRegex}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>